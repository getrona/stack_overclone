<%= render 'layouts/errors', :object => @question  %>

<%= form_for  [@user, @question]  do |f|  %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :question %>
    <%= f.text_area :question, class: 'form-control' %>
  </div>

  <%= f.submit class: 'button' %>
<% end %>
